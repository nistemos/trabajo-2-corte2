<div class="container">
    <div class="row">
        <div class="card" style="width: 18rem;">
            <form class="needs-validation" action="/comentar/2" method="POST" novalidate>
                <div class="form-row">
                    <div class="col-md-4 mb-3">
                        <label for="validationCustom01">First name</label>
                        <label for="validationCustom01">Comentario: </label>
                        <textarea name="comentario" id="" cols="30" rows="10"></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Enviar</button>
            </form>
        </div>
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="https://cdn.computerhoy.com/sites/navi.axelspringer.es/public/styles/1200/public/media/image/2018/08/fondos-pantalla-full-hd-animales_5.jpg?itok=2ibV9TJy" alt="Card image cap">
            {{#each data}}
                <div class="card-body">
                    <h4>{{nombre}}</h4>
                    <p class="card-text">{{comentario}}</p>
                </div>
                <div>
                    <button type="button" class="btn btn-primary active">
                        me gusta
                    </button>
                    <button type="button" class="btn btn-primary">
                        Compartir
                    </button>
                </div>
            {{/each}}
        </div>
    </div>
</div>