<div class="container">
  <form class="needs-validation" action="crearusuario" method="POST" novalidate>
    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label for="validationCustom01">First name</label>
        <input type="text" class="form-control" id="validationCustom01" placeholder="First name" name="Usuarionombre" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label for="validationCustom01">First name</label>
        <input type="text" class="form-control" id="validationCustom01" placeholder="First name" name="Usuarioapellido" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label for="validationCustom01">First name</label>
        <input type="text" class="form-control" id="validationCustom01" placeholder="First name" name="Usuariosemestre" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
    </div>
    <button class="btn btn-primary" type="submit">Enviar</button>
  </form>
  <table class="table table-hover" style="text-align: center;">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">Nombres</th>
        <th scope="col">Apellidos</th>
        <th scope="col">Semestre</th>
        <th scope="col">Estado</th>
        <th scope="col" colspan="2">acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each AllAlumnos}}
        <tr>
          <th scope="row">{{idUsuario}}</th>
          <td>{{Usuarionombre}}</td>
          <td>{{Usuarioapellido}}</td>
          <td>{{Usuariosemestre}}</td>
          <td>{{Usuarioactivo}}</td>
          <td>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter{{idUsuario}}">
              Eliminar
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter{{idUsuario}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Eliminar a {{Usuarionombre}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    Â¿Estas seguro que deseas eliminar a {{Usuarionombre}}?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a href="/eliminar/{{idUsuario}}" class="btn btn-primary" >Eliminar</a>
                  </div>
                </div>
              </div>
            </div>
            
          </td>
          <td><a href="/modificar/{{idUsuario}}">Modificar</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>